{
	"extends": "standard",
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": ["off"],
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", {
			"named": "never",
			"anonymous": "always",
			"asyncArrow": "always"
		}],
		"brace-style": ["error", "stroustrup"],
		"yoda": ["off"],
	},
	"env": {
		"browser": true
	}
}
